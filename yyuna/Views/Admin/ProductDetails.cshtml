<script src="~/admİn_panel_template/theme/assets/global/plugins/bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js" type="text/javascript"></script>
<script src="~/admİn_panel_template/theme/assets/global/plugins/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
<script src="~/admİn_panel_template/theme/assets/global/plugins/jquery.blockui.min.js" type="text/javascript"></script>
<script src="~/admİn_panel_template/theme/assets/global/plugins/jquery.cokie.min.js" type="text/javascript"></script>
<script src="~/admİn_panel_template/theme/assets/global/plugins/uniform/jquery.uniform.min.js" type="text/javascript"></script>
