<!-- END GLOBAL MANDATORY STYLES -->
<!-- BEGIN THEME STYLES -->
<link href="~1/admİn_panel_template/theme/assets/global/css/components.css" id="style_components" rel="stylesheet" type="text/css" />
<link href="~/admİn_panel_template/theme/assets/global/css/plugins.css" rel="stylesheet" type="text/css" />
<link href="~/admİn_panel_template/theme/assets/admin/layout/css/layout.css" rel="stylesheet" type="text/css" />
<link id="style_color" href="~/admİn_panel_template/theme/assets/admin/layout/css/themes/darkblue.css" rel="stylesheet" type="text/css" />
<link href="~/admİn_panel_template/theme/assets/admin/layout/css/custom.css" rel="stylesheet" type="text/css" />
<!-- END THEME STYLES -->
<link rel="shortcut icon" href="favicon.ico" />
<!-- BEGIN SAMPLE TABLE PORTLET-->
<div class="col-md-12 " style="border:1px grey solid;">
	<div class="portlet-title">
		<div class="caption " style="font-weight:bold;margin-bottom:8px;margin-top:70px">
			<span>@ViewBag.pr</span> -
			Ürünü Detayı
		</div>
		<div class="tools">
			<a href="javascript:;" class="collapse">
			</a>
			<a href="#portlet-config" data-toggle="modal" class="config">
			</a>
			<a href="javascript:;" class="reload">
			</a>
			<a href="javascript:;" class="remove">
			</a>
		</div>
	</div>
	<div class="portlet-body flip-scroll">
		<table class="table table-bordered table-striped table-condensed flip-content">
			<thead class="flip-content" style="background-color:mediumaquamarine">
				<tr>
					<th width="20%">
						Key
					</th>
					<th>
						Value
					</th>
				</tr>
			</thead>
			<tbody style="color:#fff">


				<tr >
					<td>
						@Html.DisplayNameFor(Model => Model.ProductID)
					</td>
					<td>
						@Html.DisplayFor(model => model.ProductID)
					</td>
				</tr>

				<tr>
					<td>
						@Html.DisplayNameFor(Model => Model.ProductName)
					</td>
					<td>
						@Html.DisplayFor(model => model.ProductName)
					</td>
				</tr>
				<tr>
					<td>
						@Html.DisplayNameFor(Model => Model.UnitPrice)
					</td>
					<td>
						@Html.DisplayFor(model => model.UnitPrice)
					</td>
				</tr>
				<tr>
					<td>
						@Html.DisplayNameFor(Model => Model.CateoryID)
					</td>
					<td>
						@{

							string? ctgName = context.Categories.FirstOrDefault(x => x.CategoryID == Model.CateoryID)?.CategoryName;
							@ctgName;
						}
					</td>
				</tr>
				<tr>
					<td>
						@Html.DisplayNameFor(Model => Model.SupplierID)
					</td>
					<td>
						@{

							string? SplName = context.Suppliers.FirstOrDefault(x => x.SupplierID == Model.SupplierID)?.BrandName;
							@SplName;
						}
					</td>
				</tr>
				<tr>
					<td>
						@Html.DisplayNameFor(Model => Model.Stock)
					</td>
					<td>
						@Html.DisplayFor(model => model.Stock)
					</td>
				</tr>
				<tr>
					<td>
						@Html.DisplayNameFor(Model => Model.Discount)
					</td>
					<td>
						@Html.DisplayFor(model => model.Discount)
					</td>
				</tr>
				<tr>
					<td>
						@Html.DisplayNameFor(Model => Model.StatusID)
					</td>
					<td>
						
						@{
							string? StrName = context.Statuses.FirstOrDefault(x => x.StatusID == Model.StatusID)?.StatusName;
							@StrName;
						}
					</td>
				</tr>
				<tr>
					<td>
						@Html.DisplayNameFor(Model => Model.Keywords)
					</td>
					<td>
						@Html.DisplayFor(model => model.Keywords)
					</td>
				</tr>
				<tr>
					<td>
						@Html.DisplayNameFor(Model => Model.Kdv)
					</td>
					<td>
						@Html.DisplayFor(model => model.Kdv)
					</td>
				</tr>
				<tr>
					<td>
						@Html.DisplayNameFor(Model => Model.Related)
					</td>
					<td>
						@Html.DisplayFor(model => model.Related)
					</td>
				</tr>
				<tr>
					<td>
						@Html.DisplayNameFor(Model => Model.Notes)
					</td>
					<td>
						@Html.DisplayFor(model => model.Notes)
					</td>
				</tr>
				<tr>
					<td>
						@Html.DisplayNameFor(Model => Model.AddDate)
					</td>
					<td>
						@Html.DisplayFor(model => model.AddDate)
					</td>
				</tr>

				<tr>
					<td>
						@Html.DisplayNameFor(Model => Model.PhotoPath)
					</td>
					<td >
						<img src="~/resimler/@Model.PhotoPath" style="border-radius:5px;width:200px;height:250px"  alt="&nbsp&nbsp   @Model.SupplierID Numaralı ID, Yüklenemedi." />
					</td>
				</tr>
				<tr>
					<td>
						@Html.DisplayNameFor(Model => Model.PhotoPath)<span>&nbspAdı</span>
					</td>
					<td>
						@Html.DisplayFor(model => model.PhotoPath) 
					</td>
				</tr>
				<tr>
					<td>
						@Html.DisplayNameFor(Model => Model.Active)
					</td>
					<td>
						@Html.DisplayFor(model => model.Active) 
					</td>
				</tr>
				
			</tbody>
		</table>

		<p class="mt-5">

			<a asp-action="ProductIndex" asp-controller="Admin" class="btn w-100" style="background-color:#191C24;color:#FFFFFF"> Ürün Listesi</a>
		</p>
		<p>

			<a asp-action="ProductEdit" asp-controller="Admin" asp-route-id="@Model.SupplierID" class="btn w-100" style="background-color:#191C24;color:#FFFFFF"> Güncelleme Yap</a>
		</p>
	</div>
</div>
<!-- END SAMPLE TABLE PORTLET-->

