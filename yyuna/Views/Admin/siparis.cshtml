@model IEnumerable<yyuna.Models.Order>

@{
	ViewData["Title"] = "Siparişler ";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-striped" style="margin-top:150px;color:#fff;margin-bottom:20px">
  
   <thead>
      <tr>
         <th>Sipariş ID</th>
         <th>Kullanıcı</th>
         <th>Email</th>
         <th>Telefon</th>
         <th>Sipariş Numarası</th>
         <th>Sipariş Tarihi</th>
         <th>Ürün ID</th>
         <th>Adet</th>
         <th>İşlemler</th>
      </tr>
   </thead>
   <tbody>
      @foreach (var order in Model)
      {
         <tr>
            <td>@order.OrderID</td>
            <td>@order.User?.NameSurname</td>
            <td>@order.User?.Email</td>
            <td>@order.User?.Telephone</td>
            <td>@order.OrderGroupGUID</td>
            <td>@order.OrderDate</td>
            <td>@order.ProductID</td>
            <td>@order.Quantity</td>
            <td>
               <button class="gönder-btn" style="padding:10px;background-color:green;color:white">Sipariş Gönder</button>
            </td>
         </tr>
      }
   </tbody>
</table>
<script>
   // Tüm 'gönder-btn' sınıfına sahip butonları seçiyoruz
   var buttons = document.querySelectorAll(".gönder-btn");

   buttons.forEach(button => {
      button.addEventListener("click", function () {
         if (button.innerHTML === "Sipariş Gönder") {
            button.innerHTML = "İptal Et";
            button.style.backgroundColor = "red";  // İptal durumunda buton rengini değiştirme
         } else {
            button.innerHTML = "Sipariş Gönder";
            button.style.backgroundColor = "green";  // Varsayılan buton rengi
         }
      });
   });
</script>