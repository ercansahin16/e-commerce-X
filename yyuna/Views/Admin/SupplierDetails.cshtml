<!-- END GLOBAL MANDATORY STYLES -->
<!-- BEGIN THEME STYLES -->
<link href="~1/admİn_panel_template/theme/assets/global/css/components.css" id="style_components" rel="stylesheet" type="text/css" />
<link href="~/admİn_panel_template/theme/assets/global/css/plugins.css" rel="stylesheet" type="text/css" />
<link href="~/admİn_panel_template/theme/assets/admin/layout/css/layout.css" rel="stylesheet" type="text/css" />
<link id="style_color" href="~/admİn_panel_template/theme/assets/admin/layout/css/themes/darkblue.css" rel="stylesheet" type="text/css" />
<link href="~/admİn_panel_template/theme/assets/admin/layout/css/custom.css" rel="stylesheet" type="text/css" />
<!-- END THEME STYLES -->
<link rel="shortcut icon" href="favicon.ico" />
<!-- BEGIN SAMPLE TABLE PORTLET-->
<div class="col-md-12 " style="border:1px grey solid;">
	<div class="portlet-title" >
		<div class="caption " style="font-weight:bold;margin-bottom:8px;margin-top:70px">
			<span>@ViewBag.spl</span> -
			Marka Detayı
		</div>
		<div class="tools">
			<a href="javascript:;" class="collapse">
			</a>
			<a href="#portlet-config" data-toggle="modal" class="config">
			</a>
			<a href="javascript:;" class="reload">
			</a>
			<a href="javascript:;" class="remove">
			</a>
		</div>
	</div>
	<div class="portlet-body flip-scroll">
		<table class="table table-bordered table-striped table-condensed flip-content">
			<thead class="flip-content" style="background-color:mediumaquamarine">
				<tr>
					<th width="20%">
						Key
					</th>
					<th>
						Value
					</th>
				</tr>
			</thead>
			<tbody style="color:#fff">


				<tr>
					<td>
						@Html.DisplayNameFor(Model => Model.SupplierID)
					</td>
					<td>
						@Html.DisplayFor(model => model.SupplierID)
					</td>
				</tr>

				<tr>
					<td>
						@Html.DisplayNameFor(Model => Model.BrandName)
					</td>
					<td>
						@Html.DisplayFor(model => model.BrandName)
					</td>
				</tr>
				<tr>
					<td>
						@Html.DisplayNameFor(Model => Model.PhotoPath)
					</td>
					<td>
					
						
							<img src="~/resimler/@Model.PhotoPath" style="border-radius:5px;width:100px;height:100px"  alt="&nbsp&nbsp   @Model.SupplierID Numaralı ID, Yüklenemedi." />
						
					
						@* @Html.DisplayFor(model => model.PhotoPath) *@
					</td>
					
				</tr>
				<tr>
					<td>
						@Html.DisplayNameFor(Model => Model.PhotoPath)<span>&nbspAdı</span>
					</td>
					<td>
						@Html.DisplayFor(model => model.PhotoPath) 
					</td>
				</tr>
				<tr>
					<td>
						@Html.DisplayNameFor(Model => Model.Active)
					</td>
					<td>
						@Html.DisplayFor(model => model.Active) 
					</td>
				</tr>
				
			</tbody>
		</table>

		<p class="mt-5">

			<a asp-action="SupplierIndex" asp-controller="Admin" class="btn w-100" style="background-color:#191C24;color:#FFFFFF"> Marka Listesi</a>
		</p>
		<p>

			<a asp-action="SupplierEdit" asp-controller="Admin" asp-route-id="@Model.SupplierID" class="btn w-100" style="background-color:#191C24;color:#FFFFFF"> Güncelleme Yap</a>
		</p>
	</div>
</div>
<!-- END SAMPLE TABLE PORTLET-->

